@model MyFirstMAMVCDemo.Models.EmployeeModels

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var CountryList = ViewBag.CountryList;
}


@foreach (var item in ViewBag.CountryList)
{
    @item.Id
    <br />
    <br />
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @*@ViewBag.CountryList;*@

    @ViewBag.Name
    @ViewBag.Id
<div class="form-horizontal">
    <h4>EmployeeModels</h4>
    <hr />
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "txtName" })

            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control", @id = "txtName" })

            @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "txtName" })

            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.RadioButtonFor(m => m.Gender, "Male")
            @Html.RadioButtonFor(m => m.Gender, "Female")


            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsApproved, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.CheckBoxFor(model => model.IsApproved, new { @class = "form-control" })


            @Html.ValidationMessageFor(model => model.IsApproved, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsApproved, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.DropDownListFor(model => model.CountryId,new SelectList((System.Collections.IEnumerable)ViewData["CountryList"], "Id", "Name") , new { @class = "form-control" })


            @Html.ValidationMessageFor(model => model.IsApproved, "", new { @class = "text-danger" })
        </div>
    </div>


    <input type="file" multiple />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

